@model Shop.Models.ChuckNorris.SearchChuckNorrisJoke
<h1>ChNrJokes searching</h1>
<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the Jokes of ChNr</h2>
                <label asp-for="Value" style="font-family: Arial"></label>
                <input asp-for="Value" class="form-control" style="background-color:bisque" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="chuckNorris" asp-action="searchJoke" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>