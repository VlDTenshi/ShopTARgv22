@model IEnumerable<Shop.Models.Kindergarden.KinderGardenViewModel>



@{
    int rowNumber = 1;
}

<div>
    <a asp-action="Create" asp-controller="KinderGarden" class="btn btn-primary">Create</a>
</div>




<form method="post">
    <table class=" table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">GroupName</th>
                <th scope="col">ChildrenCount</th>
                <th scope="col">KindergardenName</th>
                <th scope="col">Teacher</th>




                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarden in Model)
            {
                <tr>
                    <td>@rowNumber</td>

                    <td>@kindergarden.GroupName</td>
                    <td>@kindergarden.ChildrenCount</td>
                    <td>@kindergarden.KindergardenName</td>
                    <td>@kindergarden.Teacher</td>



                    <td>
                        <a asp-action="Details" asp-controller="kindergarden" asp-route-id="@kindergarden.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="kindergarden" asp-route-id="@kindergarden.Id" class="btn btn-primary">Update</a>
                        <a asp-action="Delete" asp-controller="kindergarden" asp-route-id="@kindergarden.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
                rowNumber += 1;
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

</form>