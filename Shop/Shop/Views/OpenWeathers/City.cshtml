@model Shop.Models.OpenWeathers.OpenWeatherViewModel

<div class="container">
    <h2>
        Forecast for the selected city
    </h2>
    <h2>
        @Html.DisplayFor(model => model.City)
    </h2>
    <hr />
    <div class="form-group row">
        <label asp-for="main_Temp" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.main_Temp) °С
    </div>
    <div class="form-group row">
        <label asp-for="main_Feels_like" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.main_Feels_like) °С
    </div>
    <div class="form-group row">
        <label asp-for="weather_Description" class="col-sm-2 col-form-label"></label>
        <div><p>@Html.DisplayFor(model => model.weather_Description)</p></div>
    </div>
    <div class="form-group row">
        <label asp-for="main_Pressure" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.main_Pressure) P
    </div>
    <div class="form-group row">
        <label asp-for="main_Humidity" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.main_Humidity) %
    </div>
    <div class="form-group row">
        <label asp-for="wind_Speed" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.wind_Speed) m/s
    </div>
    <div><a asp-action="index" class="btn btn-primary">Back</a></div>
</div>