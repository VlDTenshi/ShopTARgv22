@model Shop.Models.AccuWeathers.AccuWeatherViewModel

<div class="container">
    <h2>
        Forecast for the selected city
    </h2>
    <h2>
        @Html.DisplayFor(model => model.LocalizedName)
    </h2>
    <hr />
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Date)
    </div>
    <div class="form-group row">
        <label asp-for="Temperature1.Minimum" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature1.Minimum) °С
    </div>
    <div class="form-group row">
        <label asp-for="Temperature1.Maximum" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Temperature1.Maximum) °С
    </div>
    <div class="form-group row">
        <label asp-for="EpochDate" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.EpochDate) 
    </div>
    <div><a asp-action="index" class="btn btn-primary">Back</a></div>
</div>
